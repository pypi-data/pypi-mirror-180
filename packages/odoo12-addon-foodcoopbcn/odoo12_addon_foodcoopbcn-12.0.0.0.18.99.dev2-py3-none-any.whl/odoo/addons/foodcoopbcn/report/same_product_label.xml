<odoo>
    <template id="report_same_product_label_8x3">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-call="foodcoopbcn.report_style_8x3" />
                <t t-foreach="docs" t-as="product">

                    <t t-foreach="range(8)" t-as="l">
                        <div class="row">
                            <t t-foreach="range(3)" t-as="c">
                                <div class="col-4 height-8 label">
                                    <t
                                        t-call="foodcoopbcn.product_label_content_barcode_and_name"
                                    />
                                </div>
                            </t>
                        </div>
                    </t>

                </t>
            </div>
        </t>
    </template>

