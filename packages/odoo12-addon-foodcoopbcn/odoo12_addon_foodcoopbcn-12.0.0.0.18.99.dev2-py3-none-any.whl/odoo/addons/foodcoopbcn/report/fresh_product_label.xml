<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_fresh_product_label_5x4">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-call="foodcoopbcn.report_style_5x4" />
                <t t-foreach="docs" t-as="product">

                    <t t-foreach="range(5)" t-as="l">
                        <div class="row">
                            <t t-foreach="range(4)" t-as="c">
                                <div class="col-3 height-10 label">
                                    <t
                                        t-call="foodcoopbcn.fresh_product_label_content"
                                    />
                                </div>
                            </t>
                        </div>
                    </t>

                </t>
            </div>
        </t>
    </template>

    <template id="fresh_product_label_content" inherit_id="product_label_content_barcode_and_name">
        <xpath expr="//img" position="before">
            <p t-esc="product.default_code" style="font-size:16pt; margin:0; font-weight:bold; font-family: 'Avenir Next Condensed Demibold'; text-align: center;"/>
        </xpath>
    </template>

    <template id="fresh_productlabel_layout" inherit_id="foodcoopbcn.report_producttemplatelabel">
        <xpath expr="//div/t/t/div/table/tr/td/span" position="before">
            <p t-esc="product.default_code" style="font-size:16pt; margin:0; font-weight:bold; font-family: 'Avenir Next Condensed Demibold'; text-align: center;"/>
        </xpath>
    </template>
</odoo>
